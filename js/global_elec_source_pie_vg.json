{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple pie chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179-A2/main/data/elec-source-perc-cleaned.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Percentage": "number"
      }
    }
  },
  "title": {
    "text": "Electricity Generation Methods"
  },
  "width": "container",
  "height": 250,
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "Percentage",
      "type": "quantitative"
    },
    "color": {
      "field": "Type",
      "type": "nominal"
    },
    "order": {
      "field": "Percentage",
      "type": "quantitative",
      "sort": "descending"
    },
    "tooltip": [
      {
        "field": "Type",
        "type": "nominal",
        "title": "Source Type"
      },
      {
        "field": "Percentage",
        "type": "quantitative",
        "title": "Percentage (%)",
        "format": ".2f"
      }
    ]
  },
  "config": {
    "legend": {
      "orient": "left"
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
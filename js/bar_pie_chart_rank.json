{
  "data": {
    "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179-A2/main/data/data-for-bar-2019.csv",
    "format": {"type": "csv", "parse": {"per_capita_electricity": "number"}}
  },
  "width": "container",
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "per_capita_electricity", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "mark": {
    "type": "bar",
    "color": "#ff5a00"},
  "encoding": {
    "x": {
      "title": "Total Electricity Consumption Per Capita",
      "field": "per_capita_electricity",
      "type": "quantitative"
    },
    "y": {
      "field": "country",
      "type": "nominal",
      "sort": {
        "op": "mean",
        "field": "per_capita_electricity",
        "order": "descending"
      }
    }
  },
  "title": {"text": "", "anchor": "middle"}
}
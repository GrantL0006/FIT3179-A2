{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "data": {
      "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179-A2/main/data/energy-production-consumption-2010-2019.csv",
      "format": {
        "type": "csv",
        "parse": {
          "total_production": "number",
          "total_consumption": "number",
          "population": "number"
        }
      }
    },
    "width": 600,
    "height": 600,
    "title":{
      "text": "Energy Consumption and Production"
    },
    "transform": [{"filter": "datum.total_production > 0"}, {"filter": "datum.total_consumption> 0"},
    {"calculate": "datum.total_consumption/datum.total_production", "as": "ratio"}],
  
    "mark": {"type":"circle",
    "color": "#ff5a00"},
    "encoding": {
      "x": {
        "field": "total_production",
        "type": "quantitative",
        "title": "Energy Production (TWh)",
        "scale": {"type": "log"}
      },
      "y": {
        "field": "total_consumption",
        "type": "quantitative",
        "title": "Energy Consumption (TWh)",
        "scale": {"type": "log"}
      },
      "size": {"field": "population", "type": "quantitative","scale":{
        "type": "threshold",
        "domain":[1000000, 10000000, 50000000, 100000000, 500000000],
        "range":[5, 50, 100, 200, 300, 400]
      }},
      "opacity": {"value": 0.3},
      "tooltip":[
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "total_production", "type": "quantitative", "title": "Production"},
        {"field": "total_consumption", "type": "quantitative", "title": "Consumption"},
        {"field": "ratio", "type": "quantitative", "title": "Energy Ratio", "format": ".2f"}
      ]
    }
  }
  
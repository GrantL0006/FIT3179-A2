{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "data": {
      "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179-A2/main/data/energy-production-consumption-2010-2019.csv",
      "format": {
        "type": "csv",
        "parse": {
          "total_production": "number",
          "total_consumption": "number",
          "population": "number"
        }
      }
    },
    "width": "container",
    "height": 600,
    "title":{
      "text": "Energy Consumption and Production",
      "subtitle": "Data Presented in Log-Log Scale"
    },
    "params": [
      {
      "name": "year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2019,
        "step": 1,
        "name": "Year Selection: "
      }
      }
    ],
    "transform": [
      {"filter": "datum.year == year_selection"},
      {"filter": "datum.total_production > 0"}, {"filter": "datum.total_consumption> 0"},
      {"calculate": "datum.total_consumption/datum.total_production", "as": "ratio"}],
  
    "mark": {"type":"circle",
    "color": "#fc7335"},
    "encoding": {
      "x": {
        "field": "total_production",
        "type": "quantitative",
        "title": "Energy Production (TWh)",
        "scale": {"type": "log"}
      },
      "y": {
        "field": "total_consumption",
        "type": "quantitative",
        "title": "Energy Consumption (TWh)",
        "scale": {"type": "log"}
      },
      "size": {"field": "population", "type": "quantitative","scale":{
        "type": "threshold",
        "domain":[1000000, 10000000, 50000000, 100000000, 500000000],
        "range":[5, 50, 100, 250, 400, 700]
      },
    "legend":{"format": ".1s"}},
      "opacity": {"value": 0.8},
      "tooltip":[
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "population", "type": "quantitative", "title": "Population", "format": ",.0f"},
        {"field": "total_production", "type": "quantitative", "title": "Production (TWh)", "format": ",.2f"},
        {"field": "total_consumption", "type": "quantitative", "title": "Consumption (TWh)", "format": ",.2f"},
        {"field": "ratio", "type": "quantitative", "title": "Energy Ratio", "format": ".2f"}
      ]
    }
  }
  